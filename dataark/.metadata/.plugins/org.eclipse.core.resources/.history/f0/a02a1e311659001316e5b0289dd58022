#define REGISTER_FIELD -1

enum format{R, I, J, INVALIDOP};

//Add format of print out
struct funccode_t{
	int funcnum;
	char *name;
//	int rs;
//	int rt;
//	int rd;
//	int shamt;
//	int immediate;
//	int fs;
};

//Add funcstart in opcode
struct opcode_t{
	enum format type;
	int opnum;
	struct funccode_t *func;
};

char *registers[32] = {"$zero", "$at", "$v0", "$v1", "$a0", "$a1", "$a2", "$a0", \
